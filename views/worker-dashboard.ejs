<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Worker Dashboard</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <h1>Worker Dashboard</h1>
        <nav>
            <a href="/index">Home</a>
            
        </nav>
    </header>






    <main>
        <section class="job-list">
            <h2>Available Jobs</h2>
            <div id="jobs-container">
                <!-- Loop through the jobs and display each job -->
                <% if (jobs.length > 0) { %>
                    <% jobs.forEach(function(job, index) { %>
                        <div class="job" id="job<%= index + 1 %>">
                            <h3><%= job.jobTitle %></h3>
                            <p>Location: <%= job.jobLocation %></p>
                            <p>Description: <%= job.jobDescription %></p>
                            <button onclick="applyForJob('<%= index %>')">Apply</button>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No jobs available at the moment.</p>
                <% } %>
            </div>
        </section>

        <section class="application-form" id="application-form" style="display:none;">
            <h2>Application Form</h2>
            <form id="worker-apply-form">
                <label for="worker-name">Your Name:</label>
                <input type="text" id="worker-name" name="worker-name" required><br>

                <label for="worker-contact">Contact Information:</label>
                <input type="text" id="worker-contact" name="worker-contact" required><br>

                <button type="submit">Submit Application</button>
            </form>
        </section>
    </main>

    <script>
        // Function to show the application form
        function applyForJob(jobIndex) {
            const applicationForm = document.getElementById('application-form');
            applicationForm.style.display = 'block';
        }
    </script>
</body>
</html>
